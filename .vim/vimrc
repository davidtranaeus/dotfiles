" Install vim from brew?

" Automatically executes filetype plugin indent on and syntax enable
call plug#begin('~/.vim/plugged')

" fzf-vim
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'

" Linting
Plug 'dense-analysis/ale' " :ALEInfo

" Show git diffs
Plug 'airblade/vim-gitgutter'

" Themes
" Plug 'arcticicestudio/nord-vim' " nord
" Plug 'sickill/vim-monokai' 	" monokai
" Plug 'tomasr/molokai'		" molokai
" Plug 'morhetz/gruvbox' 	" gruvbox
Plug 'tomasiser/vim-code-dark'  " codedark

" Python completion
Plug 'davidhalter/jedi-vim' 	" :verbose JediDebugInfo
call plug#end()

" git-gutter delay is governed by updatetime
set updatetime=100

" Theme
colorscheme codedark

" Line numbers
set nu

" Bind esc to jk in insert mode
inoremap jk <Esc>

" Incremental search
set incsearch

" Case insensitive search
set ignorecase

" Use new regular expression engine
" Fixes slow (and broken) syntax highlighting in ts files
set re=0
